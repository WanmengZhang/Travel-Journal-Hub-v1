# Travel Journal Hub - Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
# Set USE_SQLITE=true to use SQLite instead of MySQL (recommended for development)
USE_SQLITE=false

# SQLite Configuration (only used if USE_SQLITE=true)
SQLITE_DB_PATH=travel_journal.db

# MySQL Configuration (only used if USE_SQLITE=false)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=travel_journal

# Flask Configuration
# Set to true only for local development (enables auto-reload and detailed errors)
FLASK_DEBUG=false
